<section class="bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 mb-4 mb-sm-5">
        <div class="card card-style1 border-0">
          <div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
            <div class="row align-items-center">
              <div class="col-lg-6 mb-4 mb-lg-0">
                <%if @user.image_url.attached?%>
                <%= image_tag @user.image_url, style:"height:17em" %>
                <%else%>
                <%= image_tag "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(@user.email)}?s=200&d=mm" %>
                <%end%>
              </div>
              <div class="col-lg-6 px-xl-10">
                <div class="bg-secondary d-lg-inline-block py-1-9 px-1-9 px-sm-6 mb-1-9 rounded">
                  <h3 class="h2 text-white mb-0"><%=@user.firstname%> <%=@user.lastname%></h3>
                  <span class="text-primary">Un bricoleur</span>
                </div>
                <ul class="list-unstyled mb-1-9">
                  <li class="mb-2 mb-xl-3 display-28"><span class="display-26 text-secondary me-2 font-weight-600">Téléphone:</span> <%=@user.phone%></li>
                  <li class="mb-2 mb-xl-3 display-28"><span class="display-26 text-secondary me-2 font-weight-600">Code postal:</span> <%=@user.postcode%></li>
                  <li class="mb-2 mb-xl-3 display-28"><span class="display-26 text-secondary me-2 font-weight-600">Email:</span> <%=@user.email%></li>
                  <li class="mb-2 mb-xl-3 display-28"><span class="display-26 text-secondary me-2 font-weight-600">Website:</span> </li>
                  <li class="display-28"><span class="display-26 text-secondary me-2 font-weight-600">Membre depuis :</span><%=@user.created_at.strftime('%d/%m/%Y') %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-evenly">
    <button type="button" id="loan_button">
      <%= link_to "Modifier mon profil", edit_user_registration_path, class:"loan_button"%>
    </button>
    </div>
  </div>
</div>
</div>
</section>
