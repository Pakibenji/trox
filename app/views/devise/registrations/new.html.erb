<section id="sign_up" class="container">
<div class="card card-style1 border-0">
<h2>S'inscrire</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col">
    <%= f.label :firstname, "Prénom" %><span class="obligatoire">*</span><br />
    <%= f.text_field :firstname, required: true, minlength: 2, maxlength: 15, autofocus: true, autocomplete: "Prénom", style:"width: 100%;height:50px; border-radius:4px; text-align:center;",class: "input-border"%>
  </div>
    
  <div class="col">
    <%= f.label :lastname, "Nom" %><span class="obligatoire">*</span><br />
    <%= f.text_field :lastname, required: true, autofocus: true, minlength: 2, maxlength: 15, autocomplete: "Nom", style:"width: 100%;height:50px; border-radius:4px; text-align:center;",class: "input-border"%>
  </div>
  
  <div class= "col">
    <%= f.label :email, "Email" %><span class="obligatoire">*</span><br />
    <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", maxlength: 50, style:"width: 100%;height:50px; border-radius:4px; text-align:center;", class: "input-border"%>
  </div>

  <div class= "col">
  <%= f.label :phone, "Numéro de téléphone" %><span class="obligatoire">*</span><br />
  <%= f.telephone_field :phone, autofocus: true, required: true, autocomplete: "Téléphone", style:"width: 100%;height:50px; border-radius:4px; text-align:center;", class: "input-border" %>
  </div>
   
  <div class= "col">
    <%= f.label :address, "Adresse" %><span class="obligatoire">*</span><br />
    <%= f.text_field :address, autofocus: true, minlength: 2, maxlength:75, required: true, autocomplete: "Adresse", style:"width: 100%;height:50px; border-radius:4px; text-align:center;",class: "input-border" %>
  </div>
   
  <div class= "col">
    <%= f.label :address_complement, "Complément d'adresse" %><br />
    <%= f.text_field :address_complement, autofocus: true, minlength: 2, maxlength: 50, autocomplete: "Complément d'adresse", style:"width: 100%;height:50px; border-radius:4px; text-align:center;",class: "input-border"%>
  </div>

  <div class= "col">
    <%= f.label :postcode, "Code postal" %><span class="obligatoire">*</span><br />
    <%= f.number_field :postcode, in: 10000..99999 ,required: true, autofocus: true, autocomplete: "Code postal", style:"width: 100%;height:50px; border-radius:4px; text-align:center;", class: "input-border"%>
  </div>
    
  <div class= "col">
    <%= f.label :password, "Mot de passe" %><span class="obligatoire">*</span>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Nouveau mot de passe", style:"width: 100%;height:50px; border-radius:4px; text-align:center;", class: "input-border"%>
  </div>
   
  <div class= "col">
    <%= f.label :password, "Confirmation du mot de passe" %><span class="obligatoire">*</span>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Nouveau mot de passe", style:"width: 100%;height:50px; border-radius:4px; text-align:center;", class: "input-border"%>
  </div>

  <div class="col">
    <%= f.submit "S'inscrire"%>
  </div>

<% end %>
</div>
</section>

